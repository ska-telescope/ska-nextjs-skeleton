{
  "name": "ska-nextjs-skeleton",
  "version": "0.1.0",
  "private": true,
  "license": "BSD 3-Clause",
  "description": "SKA NextJS Web App Skeleton",
  "scripts": {
    "build": "next build",
    "build:debug": "next build --debug",
    "build:profile": "next build --profile",
    "code-analysis": "next lint -f junit -o linting.xml",
    "component:headless": "cypress run --component --headless",
    "cypress:open": "cypress open",
    "dev": "next dev -p 3000",
    "e2e": "start-server-and-test dev http://localhost:3000 \" cypress open --e2e\"",
    "e2e:ci": "start-server-and-test dev http://localhost:3000 \" cypress open --e2e\" --headless --browser chrome --reporter junit --config video=false --reporter-options mochaFile=build/tests/unit-tests[hash].xml",
    "e2e:headless": "start-server-and-test dev http://localhost:3000 \" cypress run --e2e --headless\"",
    "export": "next build && next export",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "merge-reports": "jrm build/reports/unit-tests.xml \"build/tests/*.xml\"",
    "prettier:fix": "prettier --write \"**/*\"",
    "prettier": "prettier --check \"**/*\"",
    "post-update": "echo \"codesandbox preview only, need an update\" && yarn upgrade --latest",
    "run:production": "next build && NEXT_MANUAL_SIG_HANDLE=true next start",
    "run:standalone": "BUILD_STANDALONE=true next build && cp -r .next/static .next/standalone/static && cp -r ./public .next/standalone/public && NEXT_MANUAL_SIG_HANDLE=true next start",
    "skao:update": "yarn add @ska-telescope/ska-gui-components@latest @ska-telescope/ska-gui-local-storage@latest",
    "start": "NEXT_MANUAL_SIG_HANDLE=true next start -p 3000",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "npx nyc report --report-dir=build/reports --reporter=html",
    "test:coverage:report:ci": "npx nyc report --report-dir=build/reports --reporter=cobertura",
    "test:coverage:summary": "npx nyc report --reporter=text-summary",
    "test:cypress:component:ci": "cypress run --component --headless --browser chrome --reporter junit --reporter-options mochaFile=build/tests/unit-tests[hash].xml video=false",
    "test:cypress:e2e:ci": "cypress run --e2e --headless --browser chrome --reporter junit video=false --reporter-options mochaFile=build/tests/unit-tests[hash].xml",
    "test:e2e:headless": "cypress run --e2e --headless --browser chrome video=false",
    "test:headless": "cypress run video=false",
    "test:report": "jest --coverage --report-dir=build/reports --reporter=html",
    "test:report:ci": "jest --coverage --report-dir=build/reports --reporter=cobertura",
    "test:summary": "jest --coverage --reporter=text-summary"
  },
  "resolutions": {
    "nth-check": "^2.0.1",
    "postcss": "^8.4.31"
  },
  "dependencies": {
    "@babel/core": "^7.23.2",
    "@babel/plugin-syntax-flow": "^7.22.5",
    "@babel/plugin-transform-react-jsx": "^7.22.15",
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.16",
    "@mui/material": "^5.14.15",
    "@ska-telescope/ska-gui-components": "^0.1.67",
    "@ska-telescope/ska-gui-local-storage": "^0.0.3",
    "@types/node": "*",
    "@types/react": "^18.2.33",
    "formik": "^2.4.5",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "start-server-and-test": "^2.0.3",
    "styled-components": "^6.1.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "zod": "^3.22.4",
    "zod-formik-adapter": "^1.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "cypress": "^13.3.3",
    "eslint": "^8.52.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-prettier": "^5.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  }
}
