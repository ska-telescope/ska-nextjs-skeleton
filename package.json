{
  "name": "ska-nextjs-skeleton",
  "version": "0.1.0",
  "private": true,
  "license": "BSD 3-Clause",
  "description": "SKA Next.js Web App Skeleton",
  "scripts": {
    "build": "next build",
    "build:debug": "next build --debug",
    "build:profile": "next build --profile",
    "code-analysis": "next lint -f junit -o linting.xml",
    "component": "cypress open --component",
    "component:ci": "cypress run --component --headless",
    "component:headless": "cypress run --component --headless",
    "cypress": "cypress open",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --config video=false",
    "cypress:run:component": "cypress run --component --config video=false",
    "cypress:ci": "./node_modules/.bin/cypress run --reporter junit --reporter-options 'mochaFile=build/reports/cypress-tests-[hash].xml'",
    "dev": "next dev",
    "e2e": "start-server-and-test dev http://localhost:3000 \" cypress open --e2e\"",
    "e2e:ci": "start-server-and-test dev http://localhost:3000 \" cypress open --e2e\" --headless --browser chrome --reporter junit --config video=false --reporter-options mochaFile=build/tests/unit-tests[hash].xml",
    "e2e:headless": "start-server-and-test dev http://localhost:3000 \" cypress run --e2e --headless\"",
    "export": "next build && next export",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:ci": "./node_modules/.bin/eslint-output \"src/**\"",
    "merge-reports": "jrm build/reports/unit-tests.xml \"build/tests/*.xml\"",
    "prettier": "prettier --check \"**/*\"",
    "prettier:fix": "prettier --write \"**/*\"",
    "post-update": "echo \"codesandbox preview only, need an update\" && yarn upgrade --latest",
    "skao:update": "yarn add @ska-telescope/ska-gui-components@latest",
    "start": "NODE_ENV=production node .next/standalone/server.js",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "npx nyc report --report-dir=build/reports --reporter=html",
    "test:coverage:report:ci": "npx nyc report --report-dir=build/reports --reporter=cobertura",
    "test:coverage:summary": "npx nyc report --reporter=text-summary",
    "test:cypress:component:ci": "cypress run --component --headless --browser chrome --reporter junit --reporter-options mochaFile=build/tests/unit-tests[hash].xml video=false",
    "test:cypress:e2e:ci": "cypress run --e2e --headless --browser chrome --reporter junit video=false --reporter-options mochaFile=build/tests/unit-tests[hash].xml",
    "test:e2e:headless": "cypress run --e2e --headless --browser chrome video=false",
    "test:headless": "cypress run video=false",
    "test:report": "jest --coverage --report-dir=build/reports --reporter=html",
    "test:report:ci": "jest --coverage --report-dir=build/reports --reporter=cobertura",
    "test:summary": "jest --coverage --reporter=text-summary"
  },
  "dependencies": {
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.14.12",
    "@types/node": "*",
    "@types/react": "^18.2.27",
    "formik": "^2.4.5",
    "next": "^13.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.0.8",
    "typescript": "^5.2.2",
    "zod": "^3.22.4",
    "zod-formik-adapter": "^1.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "cypress": "^13.3.0",
    "eslint": "^8.51.0",
    "eslint-config-next": "^13.5.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-prettier": "^5.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "start-server-and-test": "^2.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  }
}
